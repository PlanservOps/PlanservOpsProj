# Etapa de build
FROM node:22-alpine AS build
WORKDIR /app

# Copia os arquivos do projeto
COPY . .

# Recebe a vari√°vel como argumento de build
ARG VITE_API_URL

# Instala as depend√™ncias
RUN yarn install

# Gera a build
RUN yarn build

# Debug: Mostra o conte√∫do da pasta dist
RUN echo "üìÅ Conte√∫do da pasta /app/dist:" && ls -R /app/dist || echo " Pasta dist n√£o encontrada"

# Etapa de produ√ß√£o com NGINX
FROM nginx:alpine

# Copia os arquivos da build gerada
